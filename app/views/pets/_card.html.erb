<div class="card-product">
  <%= image_tag "https://loremflickr.com/320/240/#{pet.species}" %>
  <div class="card-product-infos">
    <h2><%= pet.name %></h2>
    <p><%= pet.species %></p>
    <p><%= pet.status %></p>
    <p><%= pet.address %></p>
    <p>Found <%= pluralize(pet.found_days_ago, 'day') %> ago</p>
  </div>
</div>
